{
  "extends": "../tsconfig",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es6", "es2016", "es2017", "esnext.asynciterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@entity/*": ["entity/*"],
      "@handlers/*": ["handlers/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}